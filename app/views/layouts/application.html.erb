<!DOCTYPE html>
<html>
  <head>
    <title>Bookers3</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/6d2f46eeba.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <div class="row">

        <%= render "layouts/header" %>

        <% if notice.present? %>
          <p><%= notice %></p>
        <% end %>
        <% if alert.present? %>
          <p><%= alert %></p>
        <% end %>

        <%= yield %>

        <%= render "layouts/footer" %>
        
      </div>
    </div>
  </body>
</html>
