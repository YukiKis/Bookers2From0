  <h3>User info</h3>
  <%= attachment_image_tag user, :profile_image, :fill, 30, 30, format: "jpg", fallback: "rails.png", size: "30x30", class: "profile_image"%>
  <table class="table">
    <tr>
      <th>Name</th><td><%= user.name %></td>
    </tr>
    <tr>
      <th>Introduction</th><th><%= user.introduction %></th>
    </tr>
  </table>
  <%= link_to "SETTING", edit_user_path(user) %>

  <div class="follow-btn">
  <% if current_user != user %>
    <% if current_user.following?(user) %>
      <%= link_to "Unfollow", user_relationships_path(user), method: :delete, class: "btn btn-warning btn-block"%>
    <% else%>
      <%= link_to "Follow", user_relationships_path(user), method: :post, class: "btn btn-info btn-block" %>
    <% end %>
  <% end %>
  </div>

  <%= form_with model: book_new, local: true do |f| %>
    <%= f.text_field :title, class: "form-control" %><br>
    <%= f.text_area :body, class: "form-control" %>
    <%= f.submit "Create Book", class: "btn btn-block btn-success" %>
  <% end %>