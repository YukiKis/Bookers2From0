<h3>RESULT of being searched by <%= @search %> from <%= @user_book %> with <%= @how %></h3>

<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>User name</th>
      <th>Book title</th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
      <tr>
        <td><%= attachment_image_tag book.user, :profile_image, :fill, 30, 30, format: "jpg", fallback: "rails.png", size: "30x30" %></td>
        <td><%= book.user.name %></td>
        <td><%= book.title %></td>
        <td><%= link_to "Show", book_path(book) %></td>
      </tr>
  <% end %>
  </tbody>
</table>