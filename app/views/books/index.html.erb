<%= render "layouts/error-explanation", book_new: @book_new %>
  
<div class="col-md-3">
  <%= render "layouts/sidebar", user: @user, book_new: @book_new%>
</div>

<div class="col-md-9">
  <h3>Books</h3>
  <table class="table">
    <% if @books.any? %>
      <% @books.each do |book| %>
        <tr>
          <th><%= attachment_image_tag book.user, :profile_image, :fill, 30, 30, format: "jpg", fallback: "rails.png", size: "30x30" %><br><%= book.user.name %></th>
          <td><%= book.title %></td>
          <td><%= link_to "Show", book_path(book) %></td>
          <td>
            <%= render "favorites/favorite", book: book%>
          </td>
        </tr>
      <% end %>
    <% end %>
  </table>
</div>