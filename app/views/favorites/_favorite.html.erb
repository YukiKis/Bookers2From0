<% if book.favorited_by?(current_user) %>
  <%= link_to book_favorite_path(book), method: :delete, remote: true do %>
    <span class="glyphicon glyphicon-heart" aria-hidden="true" style="color: red;" alt="red-heart"></span><%= book.favorites.count %>いいね
  <% end %>
<% else %>
  <%= link_to book_favorite_path(book), method: :post, remote: true do %>
    <span class="glyphicon glyphicon-heart" aria-hidden="true" alt="heart"></span><%= book.favorites.count %>いいね
  <% end %>
<% end %>