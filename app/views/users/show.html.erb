<%= render "layouts/error-explanation", book_new: @book_new %>

<div class="col-md-3">
  <%= render "layouts/sidebar", user: @user, book_new: @book_new %>
</div>

<div class="col-md-9">
  <h3>Books</h3>
  <table clas="table">
    <% if @user.books.any? %>
      <% @user.books.each do |book| %>
        <tr>
          <th><%= attachment_image_tag @user, :profile_image, :fill, 30, 30, format: "jpg", fallback: "rails.png", size: "30x30" %><br><%= @user.name %></th>
          <td><%= book.title %></td>
          <td><%= link_to "Show", book_path(book) %></td>
        </tr>
      <% end %>
    <% end %>
  </table>
</div>
