  <% if current_user != user %>
    <% if current_user.following?(user) %>
      <%= link_to "Unfollow", user_relationships_path(user), method: :delete, remote: true, class: "btn btn-warning btn-block"%>
    <% else%>
      <%= link_to "Follow", user_relationships_path(user), method: :post, remote: true, class: "btn btn-info btn-block" %>
    <% end %>
  <% end %>